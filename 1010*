//this code is based on https://blog.csdn.net/xtzmm1215/article/details/38408583.
//very clever method!

#include <stdio.h>

int main(int argc, cahr*argv[]){
    int input[2];
    int flag=0;
    while(scanf("%d%d", &input[0], &input[1]) != EOF){
        if(input[0]*input[1]){
            if(flag){
                printf(" ");
            }else{
                flag=1;
            }
            printf("%d %d", input[0]*input[1], input[1]-1);
        }
        if(!flag){
            printf("0 0");
        }
    }
    return 0;
}
